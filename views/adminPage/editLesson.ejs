<%- include("../partials/header") %>
<body class="admin">
    <div class="w3-display-topleft">
      <div class="middle">
        <div class="sm-container">
          <i class="show-btn fas fa-angle-double-down"></i>
          <div class="sm-menu">
            <a href="/admin"><i class="fas fa-map-marked-alt"></i></a>
            <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
            
          </div>
        </div>
      </div>
      <a style="padding-left: 60%;" href="/admin">
        <img id="logo" src="/image/logo.png"  width="100" height="100">
      </a> 
    </div>
  
      <script>
        $(".show-btn").click(function(){
          $(".sm-menu").fadeToggle("fast");
        });
      </script>
    
    <div class="w3-display-topmiddle adtitle" >EDIT LESSON</div>
        <form id="choose1" style="width: 50%;" action="/admin/editLesson/<%= info_Lesson._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label for="nameLesson">Name of lesson</label>
                <input type="text" class="form-control" name="nameLesson" value="<%= info_Lesson.name%>" required>
            </div>
            <div class="form-group">
                <label for="level">Level of lesson</label>
                <select class="custom-select" name="level" required>
                  <option value="<%= info_Lesson.level%>"><%= info_Lesson.level%></option>
                </select>
            </div>
            <div id="choose2" class="form-group">
                <label for="information">Information</label>
                <textarea class="form-control" name="information" rows="8" cols="80" required><%= info_Lesson.information%></textarea>
            </div>
            
            <div align="center">
                <button style="background: #192649;border-color: white;" type="submit" class="btn btn-primary">SUBMIT</button>
                <a href="/admin/editOrDeleteLesson" class="btn btn-primary" style="background: #192649;border-color: white;">CANCEL</a>
            </div>
            <div align="center">
              <a href="/admin/editLesson/<%= info_Lesson._id%>/editOrDeleteQuesions" class="btn btn-primary" style="background: #192649;border-color: white;">EDIT OR DELETE QUESIONS</a>
            </div>
        </form>
    <script>
        // Replace the <textarea id="information"> with a CKEditor
        // instance, using default configuration.
        CKEDITOR.replace('information');
        function CKupdate() {
            for (instance in CKEDITOR.instances)
            CKEDITOR.instances[instance].updateElement();
        };
    </script>
<%- include("../partials/footer") %>