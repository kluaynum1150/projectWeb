<%- include("../partials/header") %>
<body class="admin">
    <div class="w3-display-topleft">
        <div class="middle">
            <div class="sm-container">
                <i class="show-btn fas fa-angle-double-down"></i>
                <div class="sm-menu">
                    <a href="/admin"><i class="fas fa-map-marked-alt"></i></a>
                    <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
        
                </div>
            </div>
        </div>
        <a style="padding-left: 60%;" href="/admin">
            <img id="logo" src="/image/logo.png"  width="100" height="100">
        </a> 
    </div>

<script>
    $(".show-btn").click(function(){
        $(".sm-menu").fadeToggle("fast");
    });
</script>

<div class="w3-display-topmiddle adtitle" >EDIT AND DELETE LESSON</div>

<div >
    <div id="choose1" class="container" style="text-align: center; width: 100%; ">
        <% if (error && error.length > 0) { %>
          <div class="alert alert-danger" role="alert">
            <%= error %>
          </div>
        <% } %>
        <% if (success && success.length > 0) { %>
          <div class="alert alert-success" role="alert">
            <%= success %>
          </div>
        <% } %>
    </div>
    <div id="choose2" class="w3-jumbotron" >
    <% allLesson.forEach(function(allLesson){ %>
        <div  class="container" style="width: 200%;">
            <h4 style="display: inline;"><%= allLesson.level %> : <%= allLesson.name %></h4>
            <a style="display: inline;" class="btn btn-warning" href="/admin/editLesson/<%= allLesson._id %>">Edit</a>
            <form style="display: inline;" action="/admin/deleteLesson/<%= allLesson._id %>?_method=DELETE" method="POST">
                <button style="width: 10%;" class="btn btn-danger">Delete</button>
            </form>
        </div>
    <% });%>
    </div>
</div>
<%- include("../partials/footer") %>