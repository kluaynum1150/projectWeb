<%- include("../partials/header") %>
<body class="admin">
    <div class="w3-display-topleft">
      <div class="middle">
        <div class="sm-container">
          <i class="show-btn fas fa-angle-double-down"></i>
          <div class="sm-menu">
            <a href="/admin"><i class="fas fa-map-marked-alt"></i></a>
            <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
            
          </div>
        </div>
      </div>
      <a style="padding-left: 60%;" href="/admin">
        <img id="logo" src="/image/logo.png"  width="100" height="100">
      </a> 
    </div>
  
      <script>
        $(".show-btn").click(function(){
          $(".sm-menu").fadeToggle("fast");
        });
      </script>
    
    <div class="w3-display-topmiddle adtitle" >Edit and delete quesions</div>
    <% allQues.forEach(function(allQues){ %>
        <form style="width: 50%;" action="/admin/editLesson/<%= lesson_id%>/editOrDeleteQuesions/<%= allQues._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <label style="display: inline;" for="Quesion">Quesion</label>
                <textarea style="width: 50%;" class="form-control" name="Quesion" rows="8" cols="80" required><%= allQues.quesion%></textarea>
            </div>
            
            <div class="form-grop">
                <label style="display: inline;" for="c1">choice 1</label>
                <input style="display: inline;" class="form-control" type="text" name="c1" value="<%= allQues.choice.one%>" required>
                <% if(allQues.answer == 'a1'){ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a1" checked>
                <% } else{ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a1">
                <% } %>
            </div>
            <div class="form-grop">
                <label style="display: inline;" for="c2">choice 2</label>
                <input style="display: inline;" class="form-control" type="text" name="c2" value="<%= allQues.choice.two%>" required>
                <% if(allQues.answer == 'a2'){ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a2" checked>
                <% } else{ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a2">
                <% } %>
            </div>
            <div class="form-grop">
                <label style="display: inline;" for="c3">choice 3</label>
                <input style="display: inline;" class="form-control" type="text" name="c3" value="<%= allQues.choice.three%>" required>
                <% if(allQues.answer == 'a3'){ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a3" checked>
                <% } else{ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a3">
                <% } %>
            </div>
            <div class="form-grop">
                <label style="display: inline;" for="c4">choice 4</label>
                <input style="display: inline;" class="form-control" type="text" name="c4" value="<%= allQues.choice.four%>" required>
                <% if(allQues.answer == 'a4'){ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a4" checked>
                <% } else{ %>
                    <input style="display: inline;" class="form-control" type="radio" name="a" value="a4">
                <% } %>
            </div>
            <div align="center">
                <button style="display: inline;" type="submit" class="btn btn-warning">EDIT</button>
                
            </div>
        </form>
        <form style="display: inline;" action="/admin/editLesson/<%= lesson_id%>/editOrDeleteQuesions/<%= allQues._id%>?_method=DELETE" method="POST">
            <button style="display: inline;" type="submit" class="btn btn-danger">DELETE</button>
        </form>
        <hr>
    <% });%>
    <div align="center">
        <a href="/admin/editOrDeleteLesson" class="btn btn-primary" style="background: #a48ed2;border-color: white;">OK</a>
    </div>

<%- include("../partials/footer") %>