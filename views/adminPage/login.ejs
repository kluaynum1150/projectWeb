<%- include("../partials/header") %>
<body class="admin">
    <div class="w3-display-topleft">
      <div class="middle">
        <div class="sm-container">
          <i class="show-btn fas fa-angle-double-down"></i>
          <div class="sm-menu">
            <a href="/admin"><i class="fas fa-map-marked-alt"></i></a>
            <a href="/logout"><i class="fas fa-sign-out-alt"></i></a>
            
          </div>
        </div>
      </div>
      <a style="padding-left: 60%;" href="/">
        <img id="logo" src="/image/logo.png"  width="100" height="100">
      </a> 
    </div>
  
      <script>
        $(".show-btn").click(function(){
          $(".sm-menu").fadeToggle("fast");
        });
      </script>
    
    <div class="w3-display-topmiddle adtitle" >LOG IN TO ADMIN</div>
    <form id="adminlogin" style="width: 40%;" action = '/admin/login' method = 'POST'>
        <div class="form-group">
          <label for="userName">USERNAME</label>
          <input type="text" class="form-control" name="username">
        </div>
        <div class="form-group">
          <label for="password">PASSWORD</label>
          <input type="password" class="form-control" name="password">
        </div>
        <div class='container' style="text-align: center;">
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
              <%= error %>
            </div>
          <% } %>
          <% if (success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
              <%= success %>
            </div>
          <% } %>
        </div>
        <center><button style="background: #192649;border-color: white;" type="submit" class="btn btn-primary">LOGIN</button></center>
    </form>
<%- include("../partials/footer") %>